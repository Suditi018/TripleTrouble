    private void BTNRESETActionPerformed(java.awt.event.ActionEvent evt) {                                         
        turn=0;
        P1Score=0;
        P2Score=0;
        
        unlockboard();
        
        lblp1score.setText("Player 1 Score: 0");
        lblp2score.setText("Player 2 Score: 0");
        LblPlayerTurn.setText("Player's Turn: "+(turn+1));
    }                                        

    private void BTNRELOADActionPerformed(java.awt.event.ActionEvent evt) {                                          
         unlockboard();
        turn=0;
       LblPlayerTurn.setText("Player's Turn: "+(turn+1));
    
    }                                         

    private void btn00ActionPerformed(java.awt.event.ActionEvent evt) {                                      
        if(turn%2==0){
            //for p1
            btn00.setEnabled(false);
            btn00.setText("0");
            board[0][0]='0';
            if(checkwinner('0')){
                lockboard();
                P1Score++;
                lblp1score.setText("Player 1 Score: "+ P1Score);
            }
            turn++;
            LblPlayerTurn.setText("Player Turn: "+ ((turn%2)+1));
        }else{
            //FOR P2
             btn00.setEnabled(false);
            btn00.setText("X");
            board[0][0]='X';
            if(checkwinner('X')){
                lockboard();
                P2Score++;
                lblp2score.setText("Player 2 Score: "+ P2Score);
            }
            turn++;
            LblPlayerTurn.setText("Player Turn: "+ ((turn%2)+1));
        }
    }                                     

